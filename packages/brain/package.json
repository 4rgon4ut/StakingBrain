{
  "name": "@stakingbrain/brain",
  "type": "module",
  "version": "0.1.0",
  "license": "GPL-3.0",
  "scripts": {
    "test:unit": "mocha -r ts-node/register -r dotenv/config --exit --recursive 'tests/**/*.unit.test.ts'",
    "start:dev": "ln -s ../../ui/build/ ./src && nodemon -w src -e js,ts,json --require dotenv/config -x ts-node src/index.ts",
    "build": "yarn run clean:dist && yarn run clean:ln && tsc -p tsconfig.json",
    "clean": "yarn run clean:modules && yarn run clean:dist",
    "clean:modules": "rimraf node_modules",
    "clean:dist": "rimraf dist",
    "clean:ln": "rimraf ./src/build"
  },
  "dependencies": {
    "@stakingbrain/common": "^0.1.0",
    "ajv": "^8.12.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "lowdb": "^5.0.5",
    "socket.io": "^4.5.4"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/lowdb": "^1.0.11",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.11.18",
    "@types/sinon": "^10.0.13",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "nodemon": "^2.0.20",
    "rimraf": "^4.1.1",
    "sinon": "^15.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
